CXX = g++
CXXFLAGS = -O2 -Wall -Wextra -std=c++11 
CXXFLAGSDEBUG = -O0 -g -Wall -Wextra -std=c++11

LDFLAGS = -lsfml-system -lsfml-window -lsfml-graphics

OBJ = CircularSector.o SegmentRing.o MovingSectors.o ConcentricClock.o main.o

game: $(OBJ)
# DEBUG
	$(CXX) $(CXXFLAGSDEBUG) -o concentric-clock_dbg $(OBJ) $(LDFLAGS)
# RELEASE
	$(CXX) $(CXXFLAGS) -o concentric-clock_release $(OBJ) $(LDFLAGS)

%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $<