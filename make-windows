CXX = g++
CXXFLAGS = -O2 -Wall -Wextra -std=c++11 -mwindows
CXXFLAGSDEBUG = -O2 -Wall -Wextra -std=c++11

INC = -I "SFML-2.1/include"
LDFLAGS = -L "SFML-2.1/lib" -lmingw32 -lsfml-main -lsfml-system -lsfml-window -lsfml-graphics
LDFLAGSDEBUG = -L "SFML-2.1/lib" -lmingw32 -lsfml-main-d -lsfml-system-d -lsfml-window-d -lsfml-graphics-d

OBJ = CircularSector.o SegmentRing.o MovingSectors.o ConcentricClock.o main.o

game: $(OBJ)
# DEBUG
	$(CXX) $(CXXFLAGSDEBUG) -o concentric-clock_dbg $(OBJ) $(LDFLAGSDEBUG)
# RELEASE
	$(CXX) $(CXXFLAGS) -o concentric-clock_release $(OBJ) $(LDFLAGS)

%.o: %.cpp
	$(CXX) $(INC) $(CXXFLAGS) -c $<